<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">


    <ImageView
        android:id="@+id/deleteLabelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_label"
        android:tag="label"/>

    <CheckBox
        android:id="@+id/labelCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>

        <EditText
            android:id="@+id/editLabelTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/deleteLabelButton"
            android:layout_toStartOf="@id/editLabelButton"/>

    <ImageView
        android:id="@+id/editLabelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/button_edit"
        android:layout_centerVertical="true"
        android:tag="edit" />
</RelativeLayout>